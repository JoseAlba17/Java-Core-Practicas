//Descripción: uso de arrays de más de una dimensión
//Keywords: matrices

import java.util.Scanner;
import java.util.Random;

public class PruebaMatriz {

	public static final int TAMAÑO = 8;
	public static final int NUMERO_MONIGOTES = 12;
	public static void main (String [] args) {
		int [][] tabla = new int [TAMAÑO][TAMAÑO];
		int fila = 0, columna = 0;
		Scanner scanner = null;
		
		llenar (tabla);
		imprimir(tabla);
		
	}
	
	public static void imprimir ( int [][] matriz) {
		
		Random random = new Random();
		int num = 0;
		int monigotes = 0;
		
		for (int i = 0; i < TAMAÑO; i++) {
			
			for (int j = 0; j < TAMAÑO; j++) {
				
				System.out.print("  " + matriz[i][j] + "  ");
			}
			
			System.out.println();
			System.out.println();
		}	
		
	}
	
	public static void llenar (int [][] matriz) {
		
		Random random = new Random();
		int monigotes = 0, fila = 0, columna = 0;
		
		while(monigotes < NUMERO_MONIGOTES) {
			
			//random.nextInt(n) devuelve un valor tipo Int entre 0 y n-1
			fila = random.nextInt(TAMAÑO);
			columna = random.nextInt(TAMAÑO);
			
			if (matriz [fila][columna] != 1) {
				
				matriz [fila][columna] = 1;
				monigotes++;
			}
		}
	}
}
